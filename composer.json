{
    "name": "tsantos/serializer",
    "description": "Object (de)serializer component for PHP",
    "keywords": ["serializer","metadata","data-transformation"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tales Santos",
            "email": "tales.augusto.santos@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TSantos\\Serializer\\": "src/"
